<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="4dp">
        <androidx.cardview.widget.CardView
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:id="@+id/card1"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">
        <ImageView
            android:id="@+id/ques_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/questions_ques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#000000"
        android:text="questions"
        android:layout_toLeftOf="@+id/answers_ques"
        android:layout_toRightOf="@+id/card1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/views_ques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="356 Views"
            android:drawableLeft="@drawable/ic_eye"
            android:layout_toRightOf="@+id/card1"
            android:layout_below="@+id/questions_ques"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:id="@+id/date_ques"
            android:layout_toRightOf="@id/views_ques"
            android:layout_below="@id/questions_ques"
            android:layout_marginLeft="5dp"
            android:text="date"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="ANS"
            android:textSize="15dp"
            android:textStyle="bold"
            android:elevation="6dp"
            android:background="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/answers_ques"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>